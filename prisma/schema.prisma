// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Deliveryman {
  id       String @id @default(uuid())
  username String @unique
  password String

  deliveries Deliveries[]

  @@map("deliveryman")
}

model Clients {
  id       String @id @default(uuid())
  username String @unique
  password String

  deliveries Deliveries[]

  @@map("clients")
}

model Deliveries {
  id        String @id @default(uuid())
  item_name String

  fk_clients_id     String
  fk_deliveryman_id String

  deliveryman Deliveryman @relation(fields: [fk_deliveryman_id], references: [id])
  clients     Clients     @relation(fields: [fk_clients_id], references: [id])

  created_at DateTime @default(now())
  end_at     DateTime @default(now())

  @@map("deliveries")
}
